<%- include("partials/startheader.ejs") %>
<section id="auth" class="fullContainer">
  <div class="bg"></div>
  <div class="logo-img">
    <img src="/images/icons/logo-192x192.png" alt="">
    <h1>Traccia Spese</h1>
  </div>

  <div class="container-login">
    <h2><%= section === "login" ? "Login" : "Register" %></h2>
    <% if (error) { %><p class="error"><%= error %></p><% } %>
  
    <form method="POST" action="<%= section === 'login' ? '/login' : '/register' %>">
      <label for="username">Nome Utente</label>
      <input type="text" name="username" required>
    
      <% if (section === "register") { %>
        <label for="email">Email</label>
        <input type="email" name="email" required>
      <% } %>
    
      <label for="password">Password</label>
      <input type="password" name="password" required>
    
      <% if (section === "register") { %>
        <label for="confirmPassword">Ripeti Password</label>
        <input type="password" name="confirmPassword" required>
      <% } %>
      <div class="btn-auth">
        <button type="submit"><%= section === "login" ? "Entrar" : "Registrar" %></button>
      </div>
    </form>
    
    <% if (section === "login") { %>
      <p>Non hai un account? <a href="/register">Registrati</a></p>
      <% } else { %>
        <p>Hai gi√† un account? <a href="/login">Accedi</a></p>
        <% } %>
      </div>
  </section>
  
  <script src="js/chart.js"></script>
</body>

</html>