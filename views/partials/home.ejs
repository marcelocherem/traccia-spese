<section id="home">
  <div class="title">
    <h2 class="title-name">Spese settimanale</h2>
    <button class="new-spese plus-btn"></button>
  </div>
  <div class="total-week">

    <h2 class="daysWeek">
      <%= weekLabel %>
    </h2>
    <div class="infos">
      <div class="container-table">
        <table class="container-text">
          <tr>
            <td class="name">Limite</td>
            <td class="value">
              <%= limit.toFixed(2) %>
            </td>
          </tr>
          <tr>
            <td class="name">Speso</td>
            <td class="value">
              <%= total.toFixed(2) %>
            </td>
          </tr>
          <tr class="line">
            <td colspan="2"></td>
          </tr>
          <tr>
            <td class="name">Libero</td>
            <td class="value <%= remaining < 0 ? 'negative' : '' %>">
              <%= remaining.toFixed(2) %>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>

  <% expenses.forEach(item=> { %>
    <div class="expense entrata-bills">
      <div class="income-text">
        <h2 class="expense-name">
          <%= item.name %>
        </h2>
        <h2 class="expense-value">
          <%= item.value.toFixed(2) %> €
        </h2>
      </div>
    </div>
    <% }) %>
      </div>

      <!-- adding stuff -->
      <div class="container-plus-btn hidden">
        <div class="container">
          <form action="/add-weekly_expenses" method="POST" class="form-family">
            <label for="name">Nome</label>
            <input type="text" name="name" placeholder="Scrive il nome" required>
            <label for="value">Valore</label>
            <input type="number" name="value" step="0.01" placeholder="Scrive il valore (€)" required>
            <label for="date_expense">Data della spesa</label>
            <input type="date" name="date_expense" required>
            <button type="submit" class="submit-btn">Aggiungi</button>
          </form>
        </div>
      </div>
</section>